---
import Navbar from "@components/contents/Navbar/Navbar.astro";
import Footer from "@components/contents/Footer/Footer.astro";
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import Container from "@components/wrappers/Container.astro";
import { BackgroundGradientAnimation } from "@components/ui/background-gradient-animation";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link
            rel="icon"
            type="image/png"
            href="https://avatars.githubusercontent.com/u/113345557?v=4"
        />
        <link
            rel="preload"
            href="/fonts/Doto-VariableFont_ROND,wght.woff2"
            as="font"
            type="font/woff2"
            crossorigin
        />
        <meta name="generator" content={Astro.generator} />
        <title>CSAP</title>
    </head>
    <body class="text-color-text font-sans min-h-screen flex flex-col">
        <ClientRouter />
        <main class="flex w-full h-full flex-col">
            <BackgroundGradientAnimation client:load>
                <Navbar />
                <Container>
                    <slot />
                </Container>
            </BackgroundGradientAnimation>
        </main>
        <Footer />
    </body>
</html>
