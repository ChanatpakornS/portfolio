---
interface Props {
    link: string;
    title?: string;
    content?: string;
}

const { link, title, content = "Let's go" } = Astro.props;
---

<a
    class="hover:bg-gray-300 px-2 lg:px-4 py-1 group-hover:underline rounded-3xl group relative inline-block group"
    href={link}
>
    <span
        class="inline-block group-hover:translate-x-1 group-hover:opacity-100 opacity-0 transition-all duration-300 ease-out"
        >{">"}</span
    >
    <span class="transition-transform duration-300 ease-out inline-block">
        {title}
    </span>
    <div
        class="absolute left-0 top-full ease-in-out duration-300 group-hover:translate-y-2 opacity-0 group-hover:opacity-100 transition-all rounded-2xl bg-spotlight px-4 py-2 whitespace-normal z-10 text-white w-36 text-[12px]"
    >
        {content}
    </div>
</a>
